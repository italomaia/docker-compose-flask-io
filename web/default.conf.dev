upstream app {
  server app:8000;
}

upstream app_ws {
  server app:8000;
}

upstream ux {
  server ux:8080;
}

server {
  listen 80;
  listen [::]:80;

  server_name ${DOMAINS};
  root /usr/src/ux/dist;

  location ~ /(favicon\.ico|app\.js|__webpack_hmr|static/.*)?${DO} {
    proxy_pass http://ux;
  }

  location / {
    proxy_set_header X-Real-IP ${DO}remote_addr;
    proxy_set_header Host ${DO}host;
    proxy_set_header X-Forwarded-For ${DO}proxy_add_x_forwarded_for;

    proxy_pass http://app;
  }

  location /socket.io {
    proxy_set_header X-Real-IP ${DO}remote_addr;
    proxy_set_header Host ${DO}host;
    proxy_set_header X-Forwarded-For ${DO}proxy_add_x_forwarded_for;

    proxy_http_version 1.1;
    proxy_buffering off;
    proxy_set_header Upgrade ${DO}http_upgrade;
    proxy_set_header Connection "Upgrade";
    proxy_pass http://app_ws/socket.io;
  }
}
